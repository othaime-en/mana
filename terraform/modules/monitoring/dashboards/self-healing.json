{
    "dashboard": {
        "id": null,
        "uid": "self-healing-overview",
        "title": "Mana Self-Healing CI/CD Overview",
        "tags": [
            "mana",
            "cicd",
            "self-healing",
            "deployments"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 1,
        "refresh": "30s",
        "panels": [
            {
                "id": 1,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "type": "stat",
                "title": "Deployment Success Rate (24h)",
                "targets": [
                    {
                        "expr": "100 * (sum(rate(deployments_total{status=\"success\"}[24h])) / sum(rate(deployments_total[24h])))",
                        "legendFormat": "Success Rate %",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 90,
                                    "color": "yellow"
                                },
                                {
                                    "value": 95,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 2,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "type": "stat",
                "title": "Total Rollbacks (24h)",
                "targets": [
                    {
                        "expr": "sum(increase(rollbacks_total[24h]))",
                        "legendFormat": "Rollbacks",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 5,
                                    "color": "yellow"
                                },
                                {
                                    "value": 10,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 3,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "type": "graph",
                "title": "Deployment Rate",
                "targets": [
                    {
                        "expr": "sum(rate(deployments_total[5m])) by (namespace, status)",
                        "legendFormat": "{{namespace}} - {{status}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Deployments/sec"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 4,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "type": "graph",
                "title": "Rollback Frequency",
                "targets": [
                    {
                        "expr": "sum(rate(rollbacks_total[5m])) by (namespace, reason)",
                        "legendFormat": "{{namespace}} - {{reason}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Rollbacks/sec"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 5,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 16
                },
                "type": "stat",
                "title": "Active Deployments",
                "targets": [
                    {
                        "expr": "sum(active_deployments)",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "color": {
                            "mode": "thresholds"
                        }
                    }
                }
            },
            {
                "id": 6,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 16
                },
                "type": "stat",
                "title": "Failed Deployments (1h)",
                "targets": [
                    {
                        "expr": "sum(increase(deployments_total{status=\"failed\"}[1h]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 3,
                                    "color": "yellow"
                                },
                                {
                                    "value": 5,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 7,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 16
                },
                "type": "stat",
                "title": "Avg Deployment Duration",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(deployment_duration_seconds_bucket[5m]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "decimals": 2
                    }
                }
            },
            {
                "id": 8,
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 24
                },
                "type": "graph",
                "title": "Pod Health Status",
                "targets": [
                    {
                        "expr": "sum(kube_pod_status_ready{namespace=~\"production|staging|orchestrator\"}) by (namespace, condition)",
                        "legendFormat": "{{namespace}} - {{condition}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Ready Pods"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 9,
                "gridPos": {
                    "h": 10,
                    "w": 24,
                    "x": 0,
                    "y": 32
                },
                "type": "table",
                "title": "Recent Deployments",
                "targets": [
                    {
                        "expr": "deployments_total",
                        "format": "table",
                        "instant": true,
                        "refId": "A"
                    }
                ],
                "transformations": [
                    {
                        "id": "organize",
                        "options": {
                            "excludeByName": {},
                            "indexByName": {},
                            "renameByName": {
                                "namespace": "Namespace",
                                "status": "Status",
                                "Value": "Count"
                            }
                        }
                    }
                ]
            },
            {
                "id": 10,
                "gridPos": {
                    "h": 10,
                    "w": 24,
                    "x": 0,
                    "y": 42
                },
                "type": "logs",
                "title": "Orchestrator Logs",
                "targets": [
                    {
                        "expr": "{namespace=\"orchestrator\", app=\"orchestrator\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "showTime": true,
                    "sortOrder": "Descending"
                }
            }
        ]
    }
}